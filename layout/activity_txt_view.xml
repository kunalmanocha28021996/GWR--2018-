<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context="com.example.th3_sagittarian.gatewayrail.TxtView">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:textColor="@color/colorPrimary"
        android:text="Import Pendency Report"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="1dp">

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="17dp"
        android:text="PORT"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="17dp"
        android:text="PENDENCY"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="1dp">

    </LinearLayout>
   <ListView
       android:id="@+id/listView1"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="9">

   </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="TOTAL"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            />
        <TextView
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:hint="Total Here"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:layout_marginRight="1dp"
            android:layout_marginLeft="3dp"
            android:onClick="futu"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:layout_width="0dp"
            android:text="Tabular"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent"

            />

        <Button
            android:onClick="futu1"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="1dp"
            android:layout_width="0dp"
            android:text="Graph"

            android:background="@color/colorPrimary"
            android:layout_height="match_parent"

            />


    </LinearLayout>
</LinearLayout>
