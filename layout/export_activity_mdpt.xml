<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.th3_sagittarian.gatewayrail.Export_MDPT">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:textColor="@color/colorPrimary"
        android:text="Export Pendency Report"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/exporttextsetmdpt"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:textSize="20dp"
        android:textStyle="italic"
        android:textColor="@color/colorPrimary" />

    <com.github.mikephil.charting.charts.BarChart
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:id="@+id/exportbarchartmdpt"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_weight="0.5"
        android:layout_height="0dp">
        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@color/Lgrey"
            android:textSize="10dp"
            />
        <TextView
            android:textColor="#000000"
            android:text="SIZE 20   "
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textSize="15dp"
            />
        <TextView
            android:layout_width="15dp"
            android:background="@color/Lblue"
            android:layout_height="15dp"
            android:textSize="10dp"
            />
        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="SIZE 40"
            android:textSize="15dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:layout_marginRight="1dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="Tabular"
            android:onClick="mobe"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent"

            />

        <Button
            android:onClick="mobe1"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="1dp"
            android:layout_width="0dp"
            android:text="Graph"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent"

            />


    </LinearLayout>


</LinearLayout>
